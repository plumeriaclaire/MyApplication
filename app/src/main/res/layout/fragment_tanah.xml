<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.TanahFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="45pt"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:text="Luas Petak"/>

            <EditText
                android:id="@+id/luaspetak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:ems="10"
                android:inputType="numberDecimal"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="meter"
                android:textSize="20dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="45pt"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:text="N Tanah"/>

        <EditText
            android:id="@+id/Ntanah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#000000"
            android:ems="10"
            android:inputType="numberDecimal" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:text="ppm"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="45pt"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:text="P Tanah"/>

    <EditText
            android:id="@+id/Ptanah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ff0000"
            android:ems="10"
            android:inputType="numberDecimal" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:text="ppm"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="45pt"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:text="K Tanah"/>
    <EditText
        android:id="@+id/Ktanah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#3F51B5"
        android:ems="10"
        android:inputType="numberDecimal"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:text="ppm"/>
        </TableRow>
    </LinearLayout>
</FrameLayout>